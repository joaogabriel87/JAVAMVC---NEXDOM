<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <changeSet id="1" author="joao">
        <createTable tableName="procedimento">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="codigo" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="idade" type="INT"/>
            <column name="sexo" type="VARCHAR(1)"/>
            <column name="permitido" type="BOOLEAN"/>
        </createTable>
    </changeSet>


    <changeSet id="2" author="joao">
        <insert tableName="procedimento">
            <column name="codigo" value="1234"/>
            <column name="idade" valueNumeric="10"/>
            <column name="sexo" value="M"/>
            <column name="permitido" valueBoolean="false"/>
        </insert>

        <insert tableName="procedimento">
            <column name="codigo" value="4567"/>
            <column name="idade" valueNumeric="20"/>
            <column name="sexo" value="M"/>
            <column name="permitido" valueBoolean="true"/>
        </insert>

        <insert tableName="procedimento">
            <column name="codigo" value="6789"/>
            <column name="idade" valueNumeric="10"/>
            <column name="sexo" value="F"/>
            <column name="permitido" valueBoolean="false"/>
        </insert>

        <insert tableName="procedimento">
            <column name="codigo" value="6789"/>
            <column name="idade" valueNumeric="10"/>
            <column name="sexo" value="M"/>
            <column name="permitido" valueBoolean="true"/>
        </insert>

        <insert tableName="procedimento">
            <column name="codigo" value="1234"/>
            <column name="idade" valueNumeric="20"/>
            <column name="sexo" value="M"/>
            <column name="permitido" valueBoolean="true"/>
        </insert>

        <insert tableName="procedimento">
            <column name="codigo" value="4567"/>
            <column name="idade" valueNumeric="30"/>
            <column name="sexo" value="F"/>
            <column name="permitido" valueBoolean="true"/>
        </insert>
    </changeSet>

</databaseChangeLog>
